    <RootNamespace>Net.Chdk.Meta.Providers.Platform</RootNamespace>
  </PropertyGroup>

  <PropertyGroup>
    <Version>0.5.0</Version>
    <VersionSuffix>alpha</VersionSuffix>
    <Product>CHIMP</Product>
    <Authors>Dmitry Shechtman</Authors>
